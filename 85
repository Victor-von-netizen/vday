        #videoContainer {
            display: none;
            margin-top: 20px;
            position: relative;
            width: 300px;
            height: 200px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 20px;
            text-align: center;
            margin: auto;
        }
        .envelope {
            position: relative;
            width: 300px;
            height: 200px;
            background: #f49ac2;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: auto;
            cursor: pointer;
            border: 4px solid white;
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.3);
            image-rendering: pixelated;
        }
        .envelope::before {
            content: "";
            position: absolute;
            top: 0;
